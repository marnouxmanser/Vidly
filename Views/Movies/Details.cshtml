@model Vidly.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul style="list-style-type:circle;">
    <li>@Html.DisplayNameFor(m => m.Genre): @Model.Genre.Description</li>
    <li>@Html.DisplayNameFor(m => m.ReleaseDate): @Model.ReleaseDate</li>
    <li>@Html.DisplayNameFor(m => m.DateAdded): @Model.DateAdded</li>
    <li>@Html.DisplayNameFor(m => m.NumberInStock): @Model.NumberInStock</li>
</ul>
