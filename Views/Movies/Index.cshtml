@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div style="margin-top: 12px; margin-bottom:20px;">
    @Html.ActionLink("New Movie", "New", new { controller = "Movies" }, new { @class = "btn btn-outline-success" })
</div>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td>
                    <div style="text-align:center;">
                        @Html.ActionLink("Details", "Details", "Movies", new { id = movie.Id }, new { @class = "btn btn-sm btn-success" })
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
<br />
@Html.ActionLink("Card View", "CardView", new { controller = "Movies" }, new { @class = "btn btn-outline-success" })